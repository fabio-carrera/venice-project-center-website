generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String       @id @unique @default(uuid())
  title       String
  description String
  tags        String[]
  img         String?
  dataurls    String[]
  type        PROJECT_TYPE
  iqp_team    iqp_team?
}

model iqp_team {
  id        Int      @id @unique @default(autoincrement())
  sponsors  String[]
  team      String[]
  advisors  String[]
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id])
}

enum PROJECT_TYPE {
  IQP
  DATA
  APP
  PUBLICATION
}
